extends layout

block content

  form(action="/login" method="post")
    h1 Please sign in

    .form-group
      label(for="username") Email
      input.form-control(type="text" id="username" name="username" placeholder="my@mail.com" required autofocus)
    .form-group
      label(for="password") Password
      input.form-control(type="password" id="password" name="password" required)

    button.btn.btn-lg.btn-primary.btn-block(type="submit") Login
